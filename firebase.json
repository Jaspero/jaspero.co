{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/contact",
        "destination": "site-contact"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=86400"
          }
        ]
      }
    ]
  }
}
